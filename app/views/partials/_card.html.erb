<% if movies%>
  <div class="carousel-width mx-auto mt-3">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4">
      <% movies.each do |movie| %>
        <%= link_to movie, class: "col", style: "margin-bottom: 100px" do %>
            <div class="card bg-dark h-100 rounded-0">
              <%= image_tag movie[:poster], class: "card-img-top rounded-0", alt: "movie poster image", width: 300, onerror: "this.onerror=null;this.src='https://images.unsplash.com/photo-1581905764498-f1b60bae941a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=700&q=80';" %>
              <div class="card-body p-2">
                <p style="font-size: 0.9em"><span><i class="fas fa-star mr-2 text-warning"></i></span><span><%= movie.imdb_rating %></span></p>
                <h5 class="card-title font-weight-normal" style="min-height: 75px; max-height: 75px; overflow: hidden;"><%= movie[:title] %></h5>
              </div>
            </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>