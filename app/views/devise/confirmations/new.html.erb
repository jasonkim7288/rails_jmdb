<div class="container top-margin">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5 m-auto ">
      <div class="w-100 card mt-5 shadow bg-dark">
        <div class="card-header">
          <h3 class="text-center">Resend confirmation instructions</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>

            <div class="form-group field">
              <%= f.label :email do %>
                <i class="fas fa-at mr-1"></i>Email address
              <% end %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
            </div>

            <div class="form-group actions">
              <%= f.submit "Resend confirmation instructions", class: "btn btn-primary btn-block" %>
            </div>

            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


