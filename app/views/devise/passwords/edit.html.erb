<div class="container top-margin">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5 m-auto ">
      <div class="w-100 card mt-5 shadow bg-dark">
        <div class="card-header">
          <h3 class="text-center">Change your password</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <div class="form-group">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>

            <%= f.hidden_field :reset_password_token %>

            <div class="form-group field">
              <%= f.label :password do %>
                <i class="fa fa-lock mr-1"></i><i>New password</i>
              <% end %>

              <%= f.password_field :password, autocomplete: "new-password" , class: "form-control"%>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
            </div>

            <div class="form-group field">
              <%= f.label :password_confirmation do %>
                <i class="fa fa-lock mr-1"></i>Confirm new password
              <% end %><br />

              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group actions">
              <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
            </div>

            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
