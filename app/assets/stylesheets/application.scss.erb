@import 'variables';
@import 'mixins';

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.main-width {
  max-width: 1340px;
}

.carousel-width {
  max-width: 1000px;
}

.top-margin {
  margin-top: 58px;
}

body {
  background-color: black;
  color: white;
}

a {
  color: white !important;
  text-decoration: none !important;
}

#nav-margin {
  @include set-nav-bg-dark;
  position: fixed;
  top: 0px;
  width: 100%;
  height: 58px;
  z-index: 10;
}

.navbar {
  @include set-nav-bg-dark;
  .navbar-brand {
    color: black !important;
  }
  .dropdown-item {
    &:hover {
        background-color: #000000C0 !important;
    }
  }
}

.dropdown-dark {
  @include set-nav-bg-dark;
}

.movie-card {
  background-color: #181818 !important;
  width: 160px;

  &:hover {
    transform: scale(1.01);
  }
  .card-img-top {
    width: 100%;
    height: 274px;
    object-fit: cover;
  }
  .delete-movie {
    position: absolute;
    right: 15px;
    bottom: 10px;
  }
}

#carouselExampleInterval {
  width: 100%;
  height: 570px;
  background-image: url("<%= image_path('jmdb-header') %>");
  background-color: #020202C0;
  background-blend-mode: soft-light;
  background-size: contain;
  overflow: hidden;
  .carousel-inner {
    padding-top: 80px;
    padding-left: 100px !important;
    padding-right: 100px !important;
  }
}

.fade-effect {
  &:hover {
    opacity: 0.5;
  }
}